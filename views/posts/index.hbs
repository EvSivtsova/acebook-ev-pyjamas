<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <li>{{this.content}}</li>
  <li>{{this.like.length}}</li>
      <span>
        <form id="like-form" action="/" method="POST">
          <input id="submit" type="submit" value="Add Like" />
        </form>
      </span>
  
    {{#each this.comments}}
      <li>{{this.author}}</li>
      <li>{{this.content}}</li>
      <li>{{this.date}}</li>
    {{/each}}
      <li> 
      
          <input type="text" name="commment" id="comment" />
          <button id="submit-comment" type="submit" value={{this.id}}>add comment</button>
       
      </li>
    
  <!-- Add a like button -->
  {{/each}}
</ul>

<form action="/users/profile/{{session.user.username}}" method="get">
    <input type="submit" value="My profile" />
</form>

<form id="search-form" action="/users/search" method="get">
  <input type="text" name="search" id="search" />
  <input id="submit" type="submit" value="Search" />
</form>

<form action="/posts/new" method="get">
    <input type="submit" value="New post" />
</form>
</body>
